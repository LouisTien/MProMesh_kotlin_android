<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextDirection</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="TextDirection" parent="android:Widget.TextView">
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="loadingStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="loadingProBar">
        <item name="colorAccent">#64be00</item>
    </style>

    <style name="loadingProBar_gray">
        <item name="colorAccent">#575757</item>
    </style>

    <style name="slideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="slideDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--<style name="slideDialogStyle" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>-->

</resources>
