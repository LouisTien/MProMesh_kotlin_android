<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/slide_dialog_item_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/slide_dialog_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_10dp_in_1080"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textColor="@color/color_000000"
        tools:text="Louis"/>

    <ImageView
        android:id="@+id/slide_dialog_item_select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_40dp_in_1080"
        android:src="@drawable/icon_slected"
        android:visibility="invisible"/>

</RelativeLayout>