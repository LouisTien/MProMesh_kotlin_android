<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/layout_size_50dp_in_1080"
    android:layout_marginEnd="@dimen/layout_size_50dp_in_1080">

    <ImageView
        android:id="@+id/loading_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/layout_size_130dp_in_1080"
        android:src="@drawable/find_device_img" />

    <RelativeLayout
        android:id="@+id/loading_msg_area_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_image_view"
        android:layout_marginTop="@dimen/layout_size_27dp_in_1080">

        <LinearLayout
            android:id="@+id/loading_msg_title_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/loading_msg_title_loading"
                android:layout_width="@dimen/layout_size_15dp_in_1080"
                android:layout_height="@dimen/layout_size_20dp_in_1080"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/layout_size_6dp_in_1080"
                android:paddingTop="@dimen/layout_size_3dp_in_1080"
                android:theme="@style/loadingProBar_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/loading_msg_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20sp_in_1080"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/find_device_working_description" />
        </LinearLayout>

        <TextView
            android:id="@+id/loading_msg_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loading_msg_title_area"
            android:layout_marginTop="@dimen/layout_size_15dp_in_1080"
            android:textSize="@dimen/text_size_15sp_in_1080"
            android:textColor="@color/color_575757"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/find_device_status_description"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/loading_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_43dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style_yellow_bg"
        android:visibility="invisible">

        <TextView
            android:id="@+id/loading_retry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mesh_retry"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_24sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_205dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

</RelativeLayout>