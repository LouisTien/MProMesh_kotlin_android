<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cloud_account_wifi_router_list_item_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cloud_account_wifi_router_list_item_delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_size_15dp_in_1080"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_remove"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cloud_account_wifi_router_list_item_image"
        android:layout_width="@dimen/layout_size_50dp_in_1080"
        android:layout_height="@dimen/layout_size_50dp_in_1080"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_10dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_15dp_in_1080"
        android:layout_toEndOf="@+id/cloud_account_wifi_router_list_item_delete_image"
        android:src="@drawable/img_locationdefault"/>

    <LinearLayout
        android:id="@+id/cloud_account_wifi_router_list_item_info_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/cloud_account_wifi_router_list_item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cloud_account_wifi_router_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_18sp_in_1080"
            tools:text="My House"/>

        <TextView
            android:id="@+id/cloud_account_wifi_router_list_item_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_12sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/settings_cloud_account_router_list_hint"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cloud_account_wifi_router_list_item_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_detail"
        android:visibility="invisible"/>

</RelativeLayout>