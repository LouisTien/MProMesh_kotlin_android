<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/layout_size_305dp_in_1080"
    android:layout_height="@dimen/layout_size_390dp_in_1080">

    <ImageView
        android:id="@+id/controller_ready_help_close_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_close"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/controller_ready_help_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/controller_ready_help_close_image">
    </android.support.v4.view.ViewPager>

    <com.chahinem.pageindicator.PageIndicator
        android:id="@+id/controller_ready_help_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_25dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>