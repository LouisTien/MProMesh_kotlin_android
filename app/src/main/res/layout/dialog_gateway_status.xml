<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gateway_status_close_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_close"/>

    <TextView
        android:id="@+id/gateway_status_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_25dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_15dp_in_1080"
        android:layout_below="@+id/gateway_status_close_image"
        android:text="@string/gateway_status_title"
        android:textStyle="bold"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:ellipsize="end"
        android:singleLine="true"/>

    <RelativeLayout
        android:id="@+id/gateway_status_has_internet_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_25dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_25dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_15dp_in_1080"
        android:layout_below="@+id/gateway_status_title_text">

        <ImageView
            android:id="@+id/gateway_status_has_internet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:src="@drawable/icon_device_has"/>

        <TextView
            android:id="@+id/gateway_status_has_internet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_size_10dp_in_1080"
            android:layout_toEndOf="@+id/gateway_status_has_internet_image"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_18sp_in_1080"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/gateway_status_has_internet"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gateway_status_no_internet_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_25dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_25dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_15dp_in_1080"
        android:layout_below="@+id/gateway_status_has_internet_relative">

        <ImageView
            android:id="@+id/gateway_status_no_internet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:src="@drawable/icon_device_no"/>

        <TextView
            android:id="@+id/gateway_status_no_internet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_size_10dp_in_1080"
            android:layout_toEndOf="@+id/gateway_status_no_internet_image"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_18sp_in_1080"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/setup_connect_troubleshooting_no_internet_title"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/gateway_status_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:layout_below="@+id/gateway_status_no_internet_relative"
        android:src="@drawable/icon_close"
        android:visibility="invisible"/>

</RelativeLayout>