<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/home_guest_end_device_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_tips_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_size_5dp_in_1080"
        android:layout_centerVertical="true"
        android:src="@drawable/account_about"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/connect_status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_tips_image"
        android:layout_marginTop="@dimen/layout_size_15dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_5dp_in_1080"
        android:src="@drawable/icon_wifi_good"/>

    <TextView
        android:id="@+id/user_define_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/connect_status_image"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_30dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textColor="@color/color_000000"
        tools:text="Living Room"/>

    <ImageView
        android:id="@+id/enter_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:src="@drawable/icon_detail"/>

    <ImageView
        android:id="@+id/home_empty_line_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar1"
        android:layout_marginTop="@dimen/layout_size_2dp_in_1080"
        android:layout_below="@+id/user_define_name_text"
        android:visibility="invisible"/>

</RelativeLayout>
