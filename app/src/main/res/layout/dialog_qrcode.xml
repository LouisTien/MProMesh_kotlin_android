<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/QRCode_dialog_title_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/QRCode_dialog_title_24g_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/QRCode_dialog_title_24g_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20sp_in_1080"
                android:textColor="@color/color_000000"
                android:text="2.4G"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/QRCode_dialog_title_24g_bottom_line_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_size_2dp_in_1080"
                android:background="@color/color_ffc800"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/QRCode_dialog_title_5g_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20sp_in_1080"
                android:textColor="@color/color_000000"
                android:text="5G"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/QRCode_dialog_title_5g_bottom_line_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_size_2dp_in_1080"
                android:background="@color/color_888888"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/QRCode_dialog_QRCode_image"
        android:layout_width="248dp"
        android:layout_height="210dp"
        android:layout_marginTop="@dimen/layout_size_50dp_in_1080"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/QRCode_dialog_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_25dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_25dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_25dp_in_1080"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:textColor="@color/color_000000"
        android:text="@string/qrcode_dialog_wifi_msg"/>

    <TextView
        android:id="@+id/QRCode_dialog_positive_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/text_size_20sp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_25dp_in_1080"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textStyle="bold"
        android:textColor="@color/color_575757"
        android:text="@string/common_done"/>

</LinearLayout>