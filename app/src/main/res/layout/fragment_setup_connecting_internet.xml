<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/setup_connecting_internet_help_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_note"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/setup_connecting_internet_content_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_35dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_30dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_30dp_in_1080"
        android:layout_below="@+id/setup_connecting_internet_help_image">

        <TextView
            android:id="@+id/setup_connecting_internet_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/setup_connecting_internet_title"/>

        <TextView
            android:id="@+id/setup_connecting_internet_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_connecting_internet_title_text"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:text="@string/setup_connecting_controller_description"
            android:textColor="@color/color_575757"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="@dimen/text_size_18sp_in_1080"/>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/setup_connecting_internet_content_animation_view"
        android:layout_width="@dimen/layout_size_300dp_in_1080"
        android:layout_height="@dimen/layout_size_201dp_in_1080"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_size_94dp_in_1080"
        android:layout_below="@+id/setup_connecting_internet_content_relative"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:lottie_imageAssetsFolder="images"
        app:lottie_loop="true"/>

    <FrameLayout
        android:id="@+id/setup_connecting_internet_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style_yellow_bg"
        android:visibility="invisible">

        <TextView
            android:id="@+id/setup_connecting_internet_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mesh_next"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_205dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

</RelativeLayout>