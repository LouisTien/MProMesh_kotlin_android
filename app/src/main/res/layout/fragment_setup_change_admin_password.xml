<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/setup_change_admin_pwd_help_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_note"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/setup_change_admin_pwd_msg_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_40dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_40dp_in_1080"
        android:layout_below="@+id/setup_change_admin_pwd_help_image">

        <TextView
            android:id="@+id/setup_change_admin_pwd_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/layout_size_22dp_in_1080"
            android:textColor="@color/color_2d2b40"
            android:text="@string/setup_change_admin_pwd_title"/>

        <TextView
            android:id="@+id/setup_change_admin_pwd_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:textSize="@dimen/layout_size_18dp_in_1080"
            android:text="@string/setup_change_admin_pwd_description"
            android:layout_below="@+id/setup_change_admin_pwd_title_text"/>

        <TextView
            android:id="@+id/setup_change_admin_pwd_new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_change_admin_pwd_new_password"
            android:layout_marginTop="@dimen/layout_size_40dp_in_1080"
            android:layout_below="@+id/setup_change_admin_pwd_description_text"/>

        <EditText
            android:id="@+id/setup_change_admin_pwd_new_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:background="@null"
            android:drawableBottom="@drawable/edittext_style_line"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:layout_below="@+id/setup_change_admin_pwd_new_password_title"/>

        <TextView
            android:id="@+id/setup_change_admin_pwd_new_password_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/layout_size_14dp_in_1080"
            android:textColor="@color/color_ff2837"
            android:text="@string/setup_change_admin_pwd_not_match_error_msg"
            android:layout_below="@+id/setup_change_admin_pwd_new_password_edit"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/setup_change_admin_pwd_confirm_new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_change_admin_pwd_confirm_new_password"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:layout_below="@+id/setup_change_admin_pwd_new_password_error_text"/>

        <EditText
            android:id="@+id/setup_change_admin_pwd_confirm_new_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:background="@null"
            android:drawableBottom="@drawable/edittext_style_line"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:layout_below="@+id/setup_change_admin_pwd_confirm_new_password_title"/>

        <TextView
            android:id="@+id/setup_change_admin_pwd_password_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/layout_size_14dp_in_1080"
            android:textColor="@color/color_ff2837"
            android:text="@string/setup_change_admin_pwd_not_match_error_msg"
            android:layout_below="@+id/setup_change_admin_pwd_confirm_new_password_edit"
            android:visibility="invisible"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/setup_change_admin_pwd_password_skip_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/layout_size_40dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_30dp_in_1080"
        android:src="@drawable/btn_skip"/>

    <ImageView
        android:id="@+id/setup_change_admin_pwd_password_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/layout_size_30dp_in_1080"
        android:src="@drawable/btn_change_off"/>

</RelativeLayout>