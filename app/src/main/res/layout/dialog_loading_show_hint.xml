<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loadingProBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/loadingProBar"/>

    <TextView
        android:id="@+id/loadingProBarHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:textColor="@color/color_ffffff"
        android:text="@string/remove_site_dialog_remove_description"
        android:gravity="center"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_below="@+id/loadingProBar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>