<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mesh_tip_cancel_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_close"/>

    <ScrollView
        android:id="@+id/mesh_tip_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_40dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_40dp_in_1080"
        android:layout_below="@+id/mesh_tip_cancel_image">

        <LinearLayout
            android:id="@+id/mesh_tip_content_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mesh_tip_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/text_size_20sp_in_1080"
                android:text="@string/mesh_tip_title"/>

            <TextView
                android:id="@+id/mesh_tip_msg_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                android:textColor="@color/color_575757"
                android:textSize="@dimen/text_size_18sp_in_1080"
                android:text="@string/mesh_tip_msg_topic"/>

            <TextView
                android:id="@+id/mesh_tip_msg_position_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_30dp_in_1080"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/layout_size_18dp_in_1080"
                android:text="@string/mesh_tip_msg_position"/>

            <ImageView
                android:id="@+id/mesh_tip_msg_position_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
                android:src="@drawable/addmesh_location1"/>

            <TextView
                android:id="@+id/mesh_tip_msg_suggest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/layout_size_18dp_in_1080"
                android:text="@string/mesh_tip_msg_suggest"/>

            <ImageView
                android:id="@+id/mesh_tip_msg_suggest_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
                android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
                android:src="@drawable/addmesh_location2"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>