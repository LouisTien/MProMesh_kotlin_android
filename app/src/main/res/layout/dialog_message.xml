<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Title"
        android:textStyle="bold"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_size_20sp_in_1080"/>

    <TextView
        android:id="@+id/msg_alert_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Description"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_size_18sp_in_1080" />

    <LinearLayout
        android:id="@+id/block_check_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_20dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/block_check_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkbox_uncheck"/>

        <TextView
            android:id="@+id/block_check_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:text="@string/message_dialog_block_always"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080">

        <TextView
            android:id="@+id/msg_alert_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_size_15dp_in_1080"
            android:layout_marginRight="@dimen/layout_size_16dp_in_1080"
            android:layout_alignParentRight="true"
            android:text="OK"
            android:textStyle="bold"
            android:textColor="@color/color_575757"
            android:textSize="@dimen/text_size_16sp_in_1080"/>

        <TextView
            android:id="@+id/msg_alert_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_size_15dp_in_1080"
            android:layout_marginLeft="@dimen/layout_size_16dp_in_1080"
            android:layout_toLeftOf="@+id/msg_alert_positive"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="@color/color_575757"
            android:textSize="@dimen/text_size_16sp_in_1080"/>

    </RelativeLayout>

</LinearLayout>