<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cloud_gateway_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/layout_size_15dp_in_1080"
        android:textColor="@color/color_575757"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="@dimen/layout_size_90dp_in_1080"
        android:text="@string/settings_cloud_account_router_action_edit"/>

    <RelativeLayout
        android:id="@+id/cloud_gateway_msg_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_size_40dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_40dp_in_1080"
        android:layout_below="@+id/cloud_gateway_edit_text">

        <TextView
            android:id="@+id/cloud_gateway_found_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25sp_in_1080"
            android:textColor="@color/color_2d2b40"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/cloud_gateway_list_title"/>

        <TextView
            android:id="@+id/cloud_gateway_choose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:text="@string/cloud_gateway_list_choose"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/cloud_gateway_found_title_text"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cloud_gateway_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_30dp_in_1080"
        android:layout_centerInParent="true"
        android:layout_above="@+id/cloud_gateway_add_image"
        android:layout_below="@+id/cloud_gateway_msg_area_relative"/>

    <FrameLayout
        android:id="@+id/cloud_gateway_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style_yellow_bg">

        <TextView
            android:id="@+id/cloud_gateway_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gateway_list_add"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_150dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

</RelativeLayout>