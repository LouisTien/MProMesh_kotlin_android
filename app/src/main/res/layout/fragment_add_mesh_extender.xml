<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mesh_extender_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_back"/>

    <TextView
        android:id="@+id/mesh_extender_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_50dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textColor="@color/color_575757"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/mesh_see_tip"/>

    <RelativeLayout
        android:id="@+id/mesh_extender_content_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_30dp_in_1080"
        android:layout_below="@+id/mesh_extender_back_image"
        android:layout_toEndOf="@+id/mesh_extender_back_image">

        <TextView
            android:id="@+id/mesh_extender_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mesh_extender_title"/>

        <TextView
            android:id="@+id/mesh_extender_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mesh_extender_title_text"
            android:layout_marginTop="@dimen/layout_size_15dp_in_1080"
            android:text="@string/mesh_extender_description"
            android:textColor="@color/color_575757"
            android:textSize="@dimen/text_size_18sp_in_1080"
            android:ellipsize="end"
            android:maxLines="2"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/mesh_extender_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_size_60dp_in_1080"
        android:layout_below="@+id/mesh_extender_content_relative"
        android:src="@drawable/addmesh_wifi1"/>

    <FrameLayout
        android:id="@+id/mesh_extender_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style_yellow_bg">

        <TextView
            android:id="@+id/mesh_extender_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mesh_next"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_150dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

</RelativeLayout>