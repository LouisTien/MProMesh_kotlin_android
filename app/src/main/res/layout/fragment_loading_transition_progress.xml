<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/layout_size_50dp_in_1080"
    android:layout_marginStart="@dimen/layout_size_50dp_in_1080">

    <ImageView
        android:id="@+id/loading_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loading_progressbar"
        android:layout_marginStart="@dimen/layout_size_28dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/waiting_3to4min_img" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/loading_progressbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_12dp_in_1080"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/progress_style_orange"
        android:indeterminateDuration="1500"/>

    <RelativeLayout
        android:id="@+id/loading_msg_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_68dp_in_1080"
        android:layout_below="@+id/loading_progressbar">

        <TextView
            android:id="@+id/loading_msg_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:textColor="@color/color_000000"
            android:text="@string/loading_transition_reboot"/>

        <TextView
            android:id="@+id/loading_msg_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loading_msg_title_text"
            android:layout_marginTop="@dimen/layout_size_15dp_in_1080"
            android:textSize="@dimen/text_size_15sp_in_1080"
            android:textColor="@color/color_575757"
            android:text="@string/loading_transition_take_3_minutes" />

    </RelativeLayout>

</RelativeLayout>