<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/setup_previous_settings_help_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_note"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/setup_previous_settings_msg_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_40dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_40dp_in_1080"
        android:layout_below="@+id/setup_previous_settings_help_image">

        <TextView
            android:id="@+id/setup_previous_settings_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/setup_previous_settings_title"/>

        <TextView
            android:id="@+id/setup_previous_settings_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:textSize="@dimen/text_size_18sp_in_1080"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/setup_previous_settings_description"
            android:layout_below="@+id/setup_previous_settings_title_text"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setup_previous_settings_content_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_40dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_40dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_40dp_in_1080"
        android:layout_below="@+id/setup_previous_settings_msg_area_relative">

        <RelativeLayout
            android:id="@+id/setup_previous_settings_sub_title_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setup_previous_settings_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_previous_settings_sub_title"
                android:textSize="@dimen/text_size_20sp_in_1080"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/setup_previous_settings_detail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_detail"
                android:layout_below="@+id/setup_previous_settings_sub_title"
                android:layout_marginTop="@dimen/layout_size_2dp_in_1080"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/setup_previous_settings_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="My House"
                android:textSize="@dimen/text_size_18sp_in_1080"
                android:textColor="@color/color_888888"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
                android:layout_below="@+id/setup_previous_settings_sub_title"
                android:layout_toStartOf="@+id/setup_previous_settings_detail_image"/>

            <ImageView
                android:id="@+id/setup_previous_settings_line_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar1"
                android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
                android:layout_below="@+id/setup_previous_settings_detail_image"/>

            <TextView
                android:id="@+id/setup_previous_settings_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/setup_previous_settings_line_image"
                android:textColor="@color/color_003eab"
                android:textSize="@dimen/text_size_18sp_in_1080"
                android:maxWidth="@dimen/layout_size_90dp_in_1080"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/setup_previous_settings_details"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/setup_previous_settings_skip_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_30dp_in_1080"
        android:background="@drawable/button_style_yellow_bg">

        <TextView
            android:id="@+id/setup_previous_settings_skip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_previous_settings_skip"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_90dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/setup_previous_settings_apply_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size_30dp_in_1080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style_yellow_bg">

        <TextView
            android:id="@+id/setup_previous_settings_apply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_previous_settings_apply"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="@dimen/layout_size_90dp_in_1080"
            android:layout_marginTop="@dimen/layout_size_5dp_in_1080"
            android:layout_marginBottom="@dimen/layout_size_5dp_in_1080"
            android:layout_marginEnd="@dimen/layout_size_10dp_in_1080"
            android:layout_marginStart="@dimen/layout_size_15dp_in_1080"/>

    </FrameLayout>

</RelativeLayout>