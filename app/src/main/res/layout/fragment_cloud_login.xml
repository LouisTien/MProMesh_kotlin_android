<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cloud_login_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cloud_login_title_area_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_size_30dp_in_1080">

        <TextView
            android:id="@+id/cloud_login_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_22sp_in_1080"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/cloud_login_connect_title"/>

        <TextView
            android:id="@+id/cloud_login_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_login_title_text"
            android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
            android:text="@string/cloud_login_connect_description"
            android:textColor="@color/color_575757"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="@dimen/text_size_18sp_in_1080"/>

    </RelativeLayout>

    <WebView
        android:id="@+id/cloud_login_WebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cloud_login_title_area_relative"/>

</RelativeLayout>