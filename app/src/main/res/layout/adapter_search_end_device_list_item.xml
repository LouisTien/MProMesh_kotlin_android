<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_user_define_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_10dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:layout_toLeftOf="@+id/link_quality_text"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:textColor="@color/color_000000"
        tools:text="Steve's iPhone"/>

    <ImageView
        android:id="@+id/search_enter_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:src="@drawable/icon_detail" />

</RelativeLayout>