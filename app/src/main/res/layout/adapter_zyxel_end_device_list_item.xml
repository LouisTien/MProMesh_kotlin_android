<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/connect_status_text"
        android:layout_width="@dimen/layout_size_82dp_in_1080"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginLeft="@dimen/layout_size_20dp_in_1080"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textColor="@color/color_3c9f00"
        tools:text="Good"/>

    <TextView
        android:id="@+id/user_define_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/connect_status_text"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:textSize="@dimen/text_size_20sp_in_1080"
        android:textColor="@color/color_000000"
        tools:text="VMG4927"/>

    <TextView
        android:id="@+id/device_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_define_name_text"
        android:layout_toRightOf="@+id/connect_status_text"
        android:textSize="@dimen/text_size_16sp_in_1080"
        android:textColor="@color/color_888888"
        tools:text="Gateway"/>

    <ImageView
        android:id="@+id/enter_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginRight="@dimen/layout_size_20dp_in_1080"
        android:src="@drawable/icon_detail" />

</RelativeLayout>
