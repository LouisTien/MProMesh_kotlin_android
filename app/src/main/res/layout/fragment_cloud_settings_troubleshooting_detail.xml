<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/settings_troubleshooting_detail_title_area_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_60dp_in_1080"
        android:background="@drawable/actionbar_detail_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_troubleshooting_detail_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_size_20dp_in_1080"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/settings_troubleshooting_detail_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_20sp_in_1080"
            android:textColor="@color/color_575757"
            android:text="@string/settings_troubleshooting"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings_troubleshooting_detail_literal_content_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_size_20dp_in_1080"
        android:layout_below="@+id/settings_troubleshooting_detail_title_area_relative">

        <ScrollView
            android:id="@+id/settings_troubleshooting_detail_description_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/settings_troubleshooting_detail_description1_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_18sp_in_1080"/>

                    <TextView
                        android:id="@+id/settings_troubleshooting_detail_description1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
                        android:text="@string/setup_connect_troubleshooting_cannot_connect_controller_description1"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16sp_in_1080"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_troubleshooting_detail_description2_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_18sp_in_1080"/>

                    <TextView
                        android:id="@+id/settings_troubleshooting_detail_description2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
                        android:text="@string/setup_connect_troubleshooting_cannot_connect_controller_description2"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16sp_in_1080"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_troubleshooting_detail_description3_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_18sp_in_1080"/>

                    <TextView
                        android:id="@+id/settings_troubleshooting_detail_description3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
                        android:text="@string/setup_connect_troubleshooting_cannot_connect_controller_description3"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16sp_in_1080"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_troubleshooting_detail_description4_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_18sp_in_1080"/>

                    <TextView
                        android:id="@+id/settings_troubleshooting_detail_description4_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
                        android:text="@string/setup_connect_troubleshooting_cannot_connect_controller_description1"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16sp_in_1080"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_troubleshooting_detail_description5_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_18sp_in_1080"/>

                    <TextView
                        android:id="@+id/settings_troubleshooting_detail_description5_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_size_10dp_in_1080"
                        android:text="@string/setup_connect_troubleshooting_cannot_connect_controller_description1"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16sp_in_1080"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>