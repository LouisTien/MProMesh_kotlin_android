<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wifi_qrcode_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_20dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_20dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
        android:textColor="@color/color_575757"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_18sp_in_1080"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2.4G WiFi"/>

    <ImageView
        android:id="@+id/wifi_qrcode_content_image"
        android:layout_width="248dp"
        android:layout_height="210dp"
        android:layout_below="@+id/wifi_qrcode_title_text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/wifi_qrcode_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_qrcode_content_image"
        android:layout_marginTop="@dimen/layout_size_10dp_in_1080"
        android:layout_marginBottom="@dimen/layout_size_10dp_in_1080"
        android:layout_marginStart="@dimen/layout_size_20dp_in_1080"
        android:layout_marginEnd="@dimen/layout_size_20dp_in_1080"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/qrcode_dialog_wifi_msg"
        android:textColor="@color/color_575757"
        android:textSize="@dimen/text_size_18sp_in_1080"/>

</RelativeLayout>